---
// src/components/Education.astro
const educations = [
  {
    school: "Telkom University",
    degree: "Bachelor of Information Systems",
    period: "Sep 2024 - Present",
    location: "Purwokerto, Indonesia",
    description: "Currently pursuing degree in Information Systems with focus on software engineering and technology innovation",
    grade: "Current Student",
    icon: "fa-solid fa-graduation-cap",
    achievements: [
      "Active in HMSI organization",
      "Participating in multiple committees",
      "Developing technical skills in web development"
    ]
  },
  {
    school: "SMK Telkom Sandhy Putra Malang",
    degree: "Software Engineering",
    period: "Jul 2021 - Jun 2024",
    location: "Malang, Indonesia",
    description: "Specialized in Software Engineering with comprehensive training in web development and UI/UX design",
    grade: "Graduate",
    icon: "fa-solid fa-school",
    achievements: [
      "BNSP Certificate - Junior Graphic Designer (2022)",
      "BNSP Certificate - Junior UI/UX Designer (2023)",
      "MTA Certificate - Microsoft Technology Associate JavaScript (2023)",
      "Certificate of Competency - Node & React JS (2023)"
    ]
  },
  {
    school: "MTsN 1 Kediri",
    degree: "Junior High School",
    period: "Jul 2018 - Jul 2021",
    location: "Kediri, Indonesia",
    description: "Completed junior high school education with strong foundation in academics",
    grade: "Graduate",
    icon: "fa-solid fa-book-open",
    achievements: [
      "Strong academic performance",
      "Active in school activities",
      "Built foundation for technical education"
    ]
  }
];
---

<section id="education" class="py-20 px-6 bg-white/5">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-16">
      <h2 class="text-5xl font-bold text-white mb-4">
        My <span class="bg-gradient-to-r from-blue-400 to-cyan-400 text-transparent bg-clip-text">Education</span>
      </h2>
      <div class="w-20 h-1 bg-gradient-to-r from-blue-500 to-cyan-500 mx-auto rounded-full"></div>
      <p class="text-gray-400 mt-4">Academic background and learning journey</p>
    </div>

    <div class="space-y-8 max-w-4xl mx-auto">
      {educations.map((edu) => (
        <div class="group bg-gradient-to-br from-white/5 to-white/0 backdrop-blur-lg rounded-2xl p-8 border border-blue-500/20 hover:border-blue-400/60 transition-all duration-500 hover:scale-105">
          <div class="flex flex-col md:flex-row gap-6">
            <!-- Icon -->
            <div class="flex-shrink-0">
              <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center group-hover:rotate-12 transition-transform duration-300">
                <i class={`${edu.icon} text-white text-4xl`}></i>
              </div>
            </div>

            <!-- Content -->
            <div class="flex-1">
              <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-3">
                <div>
                  <h3 class="text-2xl font-bold text-white mb-1">{edu.school}</h3>
                  <p class="text-blue-300 font-medium text-lg">{edu.degree}</p>
                </div>
                <div class="text-right mt-2 md:mt-0">
                  <span class="inline-flex items-center gap-2 px-4 py-1 bg-blue-500/20 text-blue-300 rounded-full text-sm font-medium">
                    <i class="fa-solid fa-calendar-days"></i>
                    {edu.period}
                  </span>
                </div>
              </div>

              <div class="flex items-center gap-2 text-gray-400 mb-3">
                <i class="fa-solid fa-location-dot"></i>
                <span class="text-sm">{edu.location}</span>
              </div>

              <p class="text-gray-300 mb-3">{edu.description}</p>
              
              <div class="flex items-center gap-2 mb-4">
                <i class="fa-solid fa-star text-yellow-400"></i>
                <span class="text-cyan-400 font-semibold">{edu.grade}</span>
              </div>

              <!-- Achievements -->
              <div class="space-y-2">
                <p class="text-sm text-gray-400 font-semibold mb-2">
                  <i class="fa-solid fa-trophy text-yellow-400 mr-2"></i>
                  Key Achievements:
                </p>
                <ul class="space-y-1">
                  {edu.achievements.map((achievement) => (
                    <li class="text-sm text-gray-400 flex items-start gap-2">
                      <i class="fa-solid fa-check text-green-400 mt-1"></i>
                      <span>{achievement}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>