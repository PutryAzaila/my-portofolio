    technologies: ["React", "HTML", "CSS", "Web Design"],
    icon: "fa-solid fa-rocket",
    color: "from-purple-500 to-pink-500",
    highlights: [
      "Developed HIPMI landing page website",
      "Participated in video profile creation",
      "Managed department communications"
    ]
  },
  {
    title: "Intern - Human Resource Development",
    company: "HMSI (Information Systems Student Association)",
    type: "Internship",
    period: "Apr 2025 - Present",
    location: "Purwokerto, Indonesia",
    description: "Active in multiple committees including Student Achievement (Secretary), Sports Week (Event Division), International Guest Lecture (PR), and various other events.",
    technologies: ["Event Management", "Communication", "Documentation"],
    icon: "fa-solid fa-bullseye",
    color: "from-green-500 to-emerald-500",
    highlights: [
      "Secretary for Student Achievement Committee",
      "Event Division for Sports Week",
      "PR for International Guest Lecture"
    ]
  },
  {
    title: "Library Staff",
    company: "Pustel (Telkom Malang Library)",
    type: "Organization",
    period: "Nov 2021 - Oct 2023",
    location: "Malang, Indonesia",
    description: "Collaborated with 24 people in creating online and offline bulletin boards. Participated in Language Month events and library recruitment processes.",
    technologies: ["Canva", "Content Creation", "Team Collaboration"],
    icon: "fa-solid fa-book",
    color: "from-yellow-500 to-orange-500",
    highlights: [
