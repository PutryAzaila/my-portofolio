---
// src/components/Skills.astro
const skillCategories = [
  {
    title: "Frontend Development",
    icon: "fa-solid fa-code",
    color: "from-blue-500 to-cyan-500",
    borderColor: "border-blue-500/20 hover:border-blue-500/40",
    skills: ["HTML", "CSS", "JavaScript", "React", "Tailwind CSS", "Astro", "Bootstrap"]
  },
  {
    title: "Backend Development",
    icon: "fa-solid fa-server",
    color: "from-cyan-500 to-blue-500",
    borderColor: "border-cyan-500/20 hover:border-cyan-500/40",
    skills: ["Node.js", "PHP", "Laravel", "MySQL"]
  },
  {
    title: "Machine Learning",
    icon: "fa-solid fa-brain",
    color: "from-purple-500 to-pink-500",
    borderColor: "border-purple-500/20 hover:border-purple-500/40",
    skills: ["Python", "ML Fundamentals", "Data Analysis"]
  },
  {
    title: "Tools & Design",
    icon: "fa-solid fa-toolbox",
    color: "from-green-500 to-emerald-500",
    borderColor: "border-green-500/20 hover:border-green-500/40",
    skills: ["Git & GitHub", "Figma", "Canva", "VS Code", "Blender"]
  }
];
---

<section id="skills" class="py-20 px-6 bg-white/5">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-16">
      <h2 class="text-5xl font-bold text-white mb-4">
        Skills & <span class="bg-gradient-to-r from-blue-400 to-cyan-400 text-transparent bg-clip-text">Technologies</span>
      </h2>
      <div class="w-20 h-1 bg-gradient-to-r from-blue-500 to-cyan-500 mx-auto rounded-full"></div>
      <p class="text-gray-400 mt-4">Technologies and tools I work with</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
      {skillCategories.map((category) => (
        <div class={`group bg-white/5 backdrop-blur-lg rounded-2xl p-8 border ${category.borderColor} transition-all duration-300 hover:scale-105`}>
          <div class={`w-16 h-16 bg-gradient-to-br ${category.color} rounded-xl flex items-center justify-center mb-6 mx-auto group-hover:rotate-12 transition-transform duration-300`}>
            <i class={`${category.icon} text-white text-3xl`}></i>
          </div>
          <h3 class="text-xl font-bold text-white text-center mb-4">{category.title}</h3>
          <div class="flex flex-wrap gap-2 justify-center">
            {category.skills.map((skill, index) => (
              <span class={`px-3 py-1 ${index % 2 === 0 ? 'bg-blue-500/20 text-blue-300' : 'bg-cyan-500/20 text-cyan-300'} rounded-full text-sm hover:scale-110 transition-transform duration-200 cursor-default`}>
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>